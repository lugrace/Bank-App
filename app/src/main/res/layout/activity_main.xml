<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.gracelu.test3.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BANK"
            android:id="@+id/name"
            tools:gravity="top|left|right"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:text="Your current balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/balb" />

        <TextView
            android:text="Your balance after: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bala" />

        <TextView
            android:text="Black-Listed Locations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textAllCaps="true" />
        <HorizontalScrollView
            android:id="@+id/hscrll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:id="@+id/tableLoc"
                    android:orientation="vertical">

                </TableLayout>
            </ScrollView>
        </HorizontalScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_plus_white_48dp"
            android:id="@+id/floatingActionButton" />

        <TextView
            android:text="where are you now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/here"
            android:textSize="24sp"
            android:textColor="@android:color/holo_purple"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <!--<ImageView-->
            <!--android:layout_width="356dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/dd"-->
            <!--android:id="@+id/imageView"-->
            <!--android:maxWidth="@dimen/activity_horizontal_margin"-->
            <!--android:minWidth="@android:dimen/thumbnail_height"-->
            <!--android:minHeight="179dp" />-->

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/warn" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message" />

        <TextView
            android:text="You saved $2 dollars! Please leave before we inflict more consequences."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saved" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>